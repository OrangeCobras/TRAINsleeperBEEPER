<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bestizer.gpsidea.MapsActivity"
        android:layout_gravity="center_horizontal|bottom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Position"
        android:id="@+id/button2"
        android:layout_gravity="bottom|right"
        android:onClick="handleChooseButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select your destination"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal|top"
        android:backgroundTint="@color/background_material_dark"
        android:autoText="true"
        android:padding="@dimen/abc_control_padding_material"
        android:textColor="@color/background_material_light"
        android:background="@color/background_material_dark" />
</FrameLayout>